{
    "$schema": "./app/example/node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "dist/**",
            "**/coverage/**",
            "**/node_modules/**",
            "**/*.min.js",
            "**/*.min.css"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 80,
        "indentWidth": 4,
        "formatWithErrors": false
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "trailingCommas": "all",
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4,
            "trailingCommas": "none"
        }
    }
}
