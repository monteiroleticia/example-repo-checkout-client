{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1",
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": ["**/test/**/*.test.ts"],
    "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
        "^.+\\.ts$": [
            "ts-jest",
            {
                "useESM": false
            }
        ]
    },
    "transformIgnorePatterns": ["node_modules/(?!(.*\\.mjs$))"]
}
