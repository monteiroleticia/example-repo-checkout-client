{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "types": ["node", "jest"],
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["**/node_modules"]
}
